@model IEnumerable<Platform_Learning_Test.Domain.Dto.TestDto>

@{
    ViewData["Title"] = "Список тестов";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
    {
        <p>
            <a asp-action="Create" class="btn btn-primary">Создать новый тест</a>
        </p>
    }

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        <span class="badge bg-secondary">@item.Category</span>
                        <span class="badge @(item.Difficulty == "Easy" ? "bg-success" : item.Difficulty == "Medium" ? "bg-warning" : "bg-danger")">
                            @item.Difficulty
                        </span>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Подробности</a>
                        @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Редактировать</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>