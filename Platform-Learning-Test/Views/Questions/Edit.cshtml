@model Platform_Learning_Test.Domain.Dto.UpdateQuestionDto

@{
    ViewData["Title"] = "Редактировать вопрос";
    var testId = Model.TestId;
}


<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="TestId" />

                <div class="form-group mb-3">
                    <label asp-for="Text" class="form-label"></label>
                    <textarea asp-for="Text" class="form-control" rows="3" required></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Difficulty" class="form-label"></label>
                        <select asp-for="Difficulty" class="form-select">
                            <option value="Easy">Легкий</option>
                            <option value="Medium">Средний</option>
                            <option value="Hard">Сложный</option>
                        </select>
                        <span asp-validation-for="Difficulty" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TimeLimitSeconds" class="form-label"></label>
                        <input asp-for="TimeLimitSeconds" class="form-control" />
                        <span asp-validation-for="TimeLimitSeconds" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <h5>Варианты ответов</h5>
                    <div class="border p-3">
                        @for (var i = 0; i < Model.AnswerOptions.Count; i++)
                        {
                            <div class="mb-3">
                                <input type="hidden" asp-for="AnswerOptions[i].Id" />
                                
                                <div class="input-group">
                                    <input asp-for="AnswerOptions[i].Text" class="form-control" 
                                           placeholder="Текст ответа" required />
                                    <div class="input-group-text">
                                        <div class="form-check">
                                            <input asp-for="AnswerOptions[i].IsCorrect" 
                                                   class="form-check-input" />
                                            <label class="form-check-label">Правильный</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="AdminDashboard" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Отмена
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Сохранить изменения
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}