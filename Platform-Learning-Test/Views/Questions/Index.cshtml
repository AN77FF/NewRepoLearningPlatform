@model IEnumerable<Platform_Learning_Test.Domain.Dto.QuestionDto>

@{
    ViewData["Title"] = "Вопросы теста";
    var testId = ViewBag.TestId;
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <p>
        <a asp-action="Create" asp-route-testId="@testId" class="btn btn-primary">Добавить вопрос</a>
        <a asp-controller="Tests" asp-action="Details" asp-route-id="@testId" class="btn btn-secondary">Назад к тесту</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Текст вопроса</th>
                <th>Сложность</th>
                <th>Варианты ответов</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Text</td>
                    <td><span class="badge bg-secondary">@item.Difficulty</span></td>
                    <td>@item.AnswerOptions.Count</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                        <a asp-controller="AnswerOptions" asp-action="Index" asp-route-questionId="@item.Id"
                           asp-area="" class="btn btn-sm btn-info">Варианты ответов</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>