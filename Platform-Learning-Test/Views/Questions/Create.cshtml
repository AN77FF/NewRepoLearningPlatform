@model Platform_Learning_Test.Domain.Dto.CreateQuestionDto

@{
    ViewData["Title"] = "Добавить вопрос";
    var testId = ViewBag.TestId;
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4>Добавить вопрос к тесту</h4>
        </div>
        <div class="card-body">
  <form asp-action="Create">
                <input type="hidden" asp-for="TestId" value="@testId" />

                <div class="form-group mb-3">
                    <label asp-for="Text" class="form-label"></label>
                    <textarea asp-for="Text" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Difficulty" class="form-label"></label>
                        <select asp-for="Difficulty" class="form-select">
                            <option value="Easy">Легкий</option>
                            <option value="Medium">Средний</option>
                            <option value="Hard">Сложный</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TimeLimitSeconds" class="form-label"></label>
                        <input asp-for="TimeLimitSeconds" class="form-control" />
                    </div>
                </div>

                <div class="mb-4">
                    <h5>Варианты ответов</h5>
                    <div id="answerOptionsContainer">
                        @for (int i = 0; i < 2; i++)
                        {
                            <div class="answer-option mb-3 p-3 border rounded">
                                <div class="row g-3">
                                    <div class="col-md-8">
                                        <input asp-for="AnswerOptions[i].Text" class="form-control" placeholder="Текст ответа" required />
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input asp-for="AnswerOptions[i].IsCorrect" class="form-check-input" />
                                            <label class="form-check-label">Правильный</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <button type="button" id="addAnswerBtn" class="btn btn-outline-secondary btn-sm mt-2">
                        <i class="fas fa-plus"></i> Добавить вариант
                    </button>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" asp-route-testId="@testId" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Назад
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Сохранить
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            let answerCount = 2;

            $('#addAnswerBtn').click(function() {
                const newAnswerHtml = `
                    <div class="answer-option mb-3 p-3 border rounded">
                        <div class="row g-3">
                            <div class="col-md-8">
                                <input name="AnswerOptions[${answerCount}].Text" class="form-control" placeholder="Текст ответа" required />
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input name="AnswerOptions[${answerCount}].IsCorrect" class="form-check-input" type="checkbox" />
                                    <label class="form-check-label">Правильный</label>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-outline-danger btn-sm mt-2 remove-answer">
                            <i class="fas fa-trash"></i> Удалить
                        </button>
                    </div>
                `;

                $('#answerOptionsContainer').append(newAnswerHtml);
                answerCount++;
            });

            $(document).on('click', '.remove-answer', function() {
                $(this).closest('.answer-option').remove();
            });
        });
    </script>
}