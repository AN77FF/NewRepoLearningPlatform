@model Platform_Learning_Test.Domain.Dto.CreateQuestionDto

@{
    ViewData["Title"] = "Создать вопрос";
}

<div class="card">
    <div class="card-header">
        <h4>Создать новый вопрос</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="TestId" class="form-label">Тест</label>
                <select asp-for="TestId" class="form-select" required>
                    <option value="">Выберите тест</option>
                    @foreach (var test in ViewBag.Tests)
                    {
                        <option value="@test.Id">@test.Title</option>
                    }
                </select>
                <span asp-validation-for="TestId" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Text" class="form-label">Текст вопроса</label>
                <textarea asp-for="Text" class="form-control" rows="3" required></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Difficulty" class="form-label">Сложность</label>
                <select asp-for="Difficulty" class="form-select">
                    <option value="Easy">Легкий</option>
                    <option value="Medium">Средний</option>
                    <option value="Hard">Сложный</option>
                </select>
            </div>
            
            <div class="mb-3">
                <label asp-for="TimeLimitSeconds" class="form-label">
                    Время на ответ (секунды)
                </label>
                <input asp-for="TimeLimitSeconds" class="form-control" value="60" />
            </div>
            
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Создать вопрос</button>
            </div>
        </form>
    </div>
</div>