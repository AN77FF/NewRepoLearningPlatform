@model IEnumerable<Platform_Learning_Test.Domain.Dto.TestDto>
@{
    ViewData["Title"] = "Learning Platform | Главная";
}

<div class="hero-section">
    <div class="container">
        <div class="hero-content">
            <h1>Откройте мир знаний с нашей платформой</h1>
            <p class="lead">Интерактивное обучение, тесты и практика для всех уровней</p>
            <a asp-controller="Tests" asp-action="Index" class="btn btn-primary btn-lg">Начать обучение</a>
        </div>
    </div>
</div>

<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Изучайте лучшие предметы</h2>

        <div class="row g-4">
          
            <div class="col-md-3">
                <a asp-controller="Tests" asp-action="Index" asp-route-category="Программирование" 
                class="card h-100 text-decoration-none text-dark">
                    <div class="card-body text-center p-4">
                        <div class="category-icon bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                            <i class="fas fa-code fa-2x text-white"></i>
                        </div>
                        <h3 class="h5">Программирование</h3>
                        <p class="text-muted">Python, C#, JavaScript и другие языки</p>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a asp-controller="Tests" asp-action="Index" asp-route-category="Аналитика данных" class="card h-100 text-decoration-none text-dark">
                    <div class="card-body text-center p-4">
                        <div class="category-icon bg-info rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                            <i class="fas fa-chart-line fa-2x text-white"></i>
                        </div>
                        <h3 class="h5">Аналитика данных</h3>
                        <p class="text-muted">SQL, Power BI, машинное обучение</p>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <a asp-controller="Tests" asp-action="Index" asp-route-category="Дизайн" class="card h-100 text-decoration-none text-dark">
                    <div class="card-body text-center p-4">
                        <div class="category-icon bg-success rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                            <i class="fas fa-paint-brush fa-2x text-white"></i>
                        </div>
                        <h3 class="h5">Дизайн</h3>
                        <p class="text-muted">Figma, Photoshop, UX/UI дизайн</p>
                    </div>
                </a>
            </div>

           
            <div class="col-md-3">
                <a asp-controller="Tests" asp-action="Index" asp-route-category="Языки" class="card h-100 text-decoration-none text-dark">
                    <div class="card-body text-center p-4">
                        <div class="category-icon bg-warning rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                            <i class="fas fa-language fa-2x text-white"></i>
                        </div>
                        <h3 class="h5">Иностранные языки</h3>
                        <p class="text-muted">Английский, испанский, немецкий</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>


















   