@model IEnumerable<Platform_Learning_Test.Domain.Dto.AnswerOptionDto>

@{
    ViewData["Title"] = "Варианты ответов";
    var questionId = ViewBag.QuestionId;
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <p>
        <a asp-action="Create" asp-route-questionId="@questionId" class="btn btn-primary">Добавить вариант</a>
        <a asp-controller="Questions" asp-action="Index" asp-route-testId="@ViewBag.TestId" class="btn btn-secondary">Назад к вопросам</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Текст ответа</th>
                <th>Правильный</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Text</td>
                    <td>
                        @if (item.IsCorrect)
                        {
                            <span class="badge bg-success">Да</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Нет</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>