@model Platform_Learning_Test.Domain.Dto.AnswerOptionDto
@{
    ViewData["Title"] = "Удалить вариант ответа";
}

<h1>Удаление варианта</h1>
<h3>Вы уверены?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Текст ответа</dt>
        <dd class="col-sm-10">@Model.Text</dd>

        <dt class="col-sm-2">Правильный?</dt>
        <dd class="col-sm-10">@(Model.IsCorrect ? "Да" : "Нет")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="Questions" asp-route-testId="@ViewBag.TestId" class="btn btn-secondary">Назад к вопросам</a>
    </form>
</div>