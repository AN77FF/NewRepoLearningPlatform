@model Platform_Learning_Test.Domain.Dto.CreateAnswerOptionDto

@{
    ViewData["Title"] = "Создать вариант ответа";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4>@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="QuestionId" class="form-label">Вопрос</label>
                    <select asp-for="QuestionId" class="form-select" required
                            asp-items="@(new SelectList(ViewBag.Questions, "Id", "Text", Model.QuestionId))">
                        <option value="">Выберите вопрос</option>
                    </select>
                    <span asp-validation-for="QuestionId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Text" class="form-label"></label>
                    <input asp-for="Text" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="IsCorrect" class="form-check-input" />
                        <label asp-for="IsCorrect" class="form-check-label"></label>
                        <span asp-validation-for="IsCorrect" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="AdminDashboard" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Отмена
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Создать вариант
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}