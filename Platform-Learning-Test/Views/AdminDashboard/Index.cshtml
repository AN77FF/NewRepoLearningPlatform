@model Platform_Learning_Test.Models.AdminDashboardViewModel

@{
	ViewData["Title"] = "Панель управления";
}

<div class="container mt-4">
	<h2>@ViewData["Title"]</h2>

	<div class="row mt-4">
		<div class="col-md-3">
			<div class="card bg-primary text-white">
				<div class="card-body">
					<h5 class="card-title">Пользователи</h5>
					<p class="display-4">@Model.Stats.TotalUsers</p>
				</div>
			</div>
		</div>

		<div class="col-md-3">
			<div class="card bg-success text-white">
				<div class="card-body">
					<h5 class="card-title">Тесты</h5>
					<p class="display-4">@Model.Stats.TotalTests</p>
				</div>
			</div>
		</div>

		<div class="col-md-3">
			<div class="card bg-info text-white">
				<div class="card-body">
					<h5 class="card-title">Новые пользователи</h5>
					<p class="display-4">@Model.Stats.NewUsers</p>
				</div>
			</div>
		</div>

		<div class="col-md-3">
			<div class="card bg-warning text-dark">
				<div class="card-body">
					<h5 class="card-title">Активные тесты</h5>
					<p class="display-4">@Model.Stats.ActiveTests</p>
				</div>
			</div>
		</div>
	</div>

	<div class="row mt-4">
		<div class="col-md-4">
			<div class="card">
				<div class="card-header bg-primary text-white">
					<h4>Тесты</h4>
				</div>
				<div class="card-body">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>Название</th>
								<th>Вопросы</th>
								<th>Действия</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var test in Model.Tests)
							{
								<tr>
									<td>@test.Title</td>
									<td>@test.QuestionCount</td>
								
									<td>
										<a asp-controller="Tests" asp-action="Edit" asp-route-id="@test.Id"
										   class="btn btn-sm btn-warning">
											<i class="fas fa-edit"></i>
										</a>
										<form asp-controller="Tests" asp-action="Delete" asp-route-id="@test.Id"
											  method="post" class="d-inline">
											<button type="submit" class="btn btn-sm btn-danger">
												<i class="fas fa-trash"></i>
											</button>
										</form>
									</td>
								</tr>
							}
						</tbody>
					</table>
					<a asp-controller="Tests" asp-action="Create" class="btn btn-primary mt-2">
						<i class="fas fa-plus"></i> Добавить тест
					</a>
				</div>
			</div>
		</div>

		<div class="col-md-4">
			<div class="card">
				<div class="card-header bg-success text-white">
					<h4>Вопросы</h4>
				</div>
				<div class="card-body">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>Текст</th>
								<th>Тест</th>
								<th>Действия</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var question in Model.Questions)
							{
								<tr>
									<td>@question.Text.Substring(0, Math.Min(30, question.Text.Length))...</td>
									<td>@question.TestTitle</td>
									<td>
										<a asp-controller="Questions" asp-action="Edit" asp-route-id="@question.Id"
										   class="btn btn-sm btn-warning">
											<i class="fas fa-edit"></i>
										</a>
										<form asp-controller="Questions" asp-action="Delete" asp-route-id="@question.Id"
											  method="post" class="d-inline"
											  onsubmit="return confirm('Удалить этот вопрос?');">
											<button type="submit" class="btn btn-sm btn-danger">
												<i class="fas fa-trash"></i> 
											</button>
										</form>
									</td>
								</tr>
							}
						</tbody>
					</table>
					<a asp-area="Admin"
					   asp-controller="Questions"
					   asp-action="Create"
					   asp-area=""
					   class="btn btn-success mt-2">
						<i class="fas fa-plus"></i> Добавить вопрос
					</a>

				</div>
			</div>
		</div>

		<div class="col-md-4">
			<div class="card">
				<div class="card-header bg-info text-white">
					<h4>Варианты ответов</h4>
				</div>
				<div class="card-body">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>Текст</th>
								<th>Вопрос</th>
								<th>Действия</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var answer in Model.Answers)
							{
								<tr>
									<td>@answer.Text.Substring(0, Math.Min(20, answer.Text.Length))...</td>
									<td>@answer.QuestionText.Substring(0, Math.Min(20, answer.QuestionText.Length))...</td>
									<td>
										<a asp-controller="AnswerOptions" asp-action="Edit" asp-route-id="@answer.Id"
										   class="btn btn-sm btn-warning">
											<i class="fas fa-edit"></i>
										</a>
										<form asp-controller="AnswerOptions" asp-action="Delete" asp-route-id="@answer.Id"
											  method="post" class="d-inline"
											  onsubmit="return confirm('Удалить этот вариант ответа?');">
											<button type="submit" class="btn btn-sm btn-danger">
												<i class="fas fa-trash"></i> 
											</button>
										</form>
									</td>
								</tr>
							}
						</tbody>
					</table>
					<a asp-controller="AnswerOptions"
					   asp-action="Create"
					   asp-area=""
					   class="btn btn-info mt-2">
						<i class="fas fa-plus"></i> Добавить вариант
					</a>
				</div>
			</div>
		</div>
	</div>
</div>