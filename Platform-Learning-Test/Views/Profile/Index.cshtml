@model Platform_Learning_Test.Models.Account.ProfileModel

@{
    ViewData["Title"] = "Профиль пользователя";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <img src="@(Model.Profile.AvatarUrl ?? "https://via.placeholder.com/150")?v=@DateTime.Now.Ticks"
                         class="rounded-circle mb-3" alt="Avatar" width="150" height="150">
                    <h4>@Model.Profile.Name</h4>
                    <p class="text-muted">@Model.Profile.Email</p>
                    <a asp-action="Edit" class="btn btn-primary btn-block">Редактировать профиль</a>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">О себе</h5>
                    <p class="card-text">@(Model.Profile.Bio ?? "Пользователь пока не добавил информацию о себе.")</p>

                    <h5 class="card-title mt-4">Локация</h5>
                    <p class="card-text">@(Model.Profile.Location ?? "Не указано")</p>

                    <h5 class="card-title mt-4">Результаты тестов</h5>
                    @if (Model.TestResults.Any())
                    {
                        <div class="list-group">
                            @foreach (var result in Model.TestResults)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@result.TestTitle</h6>
                                        <small>@result.CompletedAt.ToString("d")</small>
                                    </div>
                                    <div class="progress mt-2" style="height: 20px;">
                                        <div class="progress-bar"
                                             role="progressbar"
                                             style="width: @result.ScorePercentage%;"
                                             aria-valuenow="@result.ScorePercentage"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                            @result.ScorePercentage.ToString("0.##")%
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="card-text">Пока нет результатов тестов.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>