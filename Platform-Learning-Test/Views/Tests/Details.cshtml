@model Platform_Learning_Test.Domain.Dto.TestDetailDto

@{
    ViewData["Title"] = $"Детали теста: {Model.Title}";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>@Model.Title</h4>
            <p class="mb-0">@Model.Description</p>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <p><strong>Категория:</strong> @Model.Category</p>
                    <p><strong>Сложность:</strong> @Model.Difficulty</p>
                    <p><strong>Дата создания:</strong> @Model.CreatedAt.ToString("d")</p>
                    <p><strong>Продолжительность:</strong> @Model.Duration.ToString(@"hh\:mm")</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Количество вопросов:</strong> @Model.Questions.Count</p>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded" alt="Изображение теста">
                    }
                </div>
            </div>

            

            <a asp-controller="TestTaking" asp-action="StartTest" asp-route-testId="@Model.Id"
               class="btn btn-success btn-lg">
                <i class="fas fa-play"></i> Начать тест
            </a>
        </div>
    </div>

    <div class="mt-4">
        <h4>Вопросы теста</h4>
        @foreach (var question in Model.Questions)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5>@question.Text</h5>
                    <p><strong>Сложность:</strong> @question.Difficulty</p>
                    <p><strong>Время на ответ:</strong> @question.TimeLimitSeconds сек</p>

                    <div class="mt-3">
                        <h6>Варианты ответов:</h6>
                        <ul class="list-group">
                            @foreach (var answer in question.AnswerOptions)
                            {
                                <li class="list-group-item @(answer.IsCorrect ? "list-group-item-success" : "")">
                                    @if (answer.IsCorrect)
                                    {
                                        <span class="badge bg-success me-2">✓</span>
                                    }
                                    @answer.Text
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-3">
        <i class="fas fa-arrow-left"></i> Назад к списку тестов
    </a>
</div>