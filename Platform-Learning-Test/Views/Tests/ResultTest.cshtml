@model IEnumerable<Platform_Learning_Test.Domain.Dto.TestResultDto>

@{
    ViewData["Title"] = "Мои результаты тестов";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Тест</th>
                <th>Дата завершения</th>
                <th>Результат</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TestTitle</td>
                    <td>@item.CompletedAt.ToString("g")</td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar @GetProgressBarClass(item.ScorePercentage)"
                                 role="progressbar"
                                 style="width: @item.ScorePercentage%"
                                 aria-valuenow="@item.ScorePercentage"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                                @item.ScorePercentage.ToString("0.##")%
                            </div>
                        </div>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Детали</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@functions {
    string GetProgressBarClass(double percentage)
    {
        return percentage switch
        {
            >= 80 => "bg-success",
            >= 50 => "bg-warning",
            _ => "bg-danger"
        };
    }
}