@model Platform_Learning_Test.Domain.Entities.TestReview

@{
    ViewData["Title"] = "Оставить отзыв";
    var testId = ViewBag.TestId;
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4>@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <input type="hidden" asp-for="TestId" value="@testId" />

                <div class="form-group mb-3">
                    <label asp-for="Text" class="form-label"></label>
                    <textarea asp-for="Text" class="form-control" rows="5" required></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Оценка</label>
                    <div class="rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <input type="radio" id="star@i" name="Rating" value="@i" @(i == 5 ? "checked" : "") />
                            <label for="star@i" title="@i звезд">★</label>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Tests" asp-action="Details" asp-route-id="@testId" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Отмена
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane"></i> Отправить
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .rating {
            display: inline-block;
            unicode-bidi: bidi-override;
            direction: rtl;
        }

            .rating > input {
                display: none;
            }

            .rating > label {
                display: inline-block;
                font-size: 24px;
                padding: 0 3px;
                cursor: pointer;
                color: #ddd;
            }

            .rating > input:checked ~ label,
            .rating > input:hover ~ label {
                color: #ffc107;
            }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}