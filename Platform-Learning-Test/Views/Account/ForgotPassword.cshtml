@using Platform_Learning_Test.Models.Account
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Восстановление пароля";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>

                <form asp-action="ForgotPassword" method="post" id="forgotPasswordForm">
                    <div asp-validation-summary="All" class="alert alert-danger"></div>

                    <div class="form-group">
                        <label asp-for="Email" class="font-weight-bold"></label>
                        <input asp-for="Email" class="form-control"
                               placeholder="example@email.com"
                               autocomplete="username" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block mt-4">
                        <i class="fas fa-paper-plane mr-2"></i>Отправить инструкции
                    </button>
                </form>

                <div class="text-center mt-4">
                    <a asp-action="Login" class="text-primary">
                        <i class="fas fa-arrow-left mr-1"></i>Вернуться к входу
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {

            $('#Email').on('blur', function() {
                $(this).val($(this).val().trim().toLowerCase());
            });
        });
    </script>
}